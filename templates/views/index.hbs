<body>
    <script src="https://kit.fontawesome.com/f024d0947f.js"></script>
    <div class="weather-content">
        <div class="all-content">

            {{>header}}


            <div class="format">
                <div>{{title}}</div>
                <form>
                    <input type="text" placeholder="Location">
                    <button class="but btn btn-success">Search</button>

                </form>

            </div>
            <div id="box1" class="box">
                <div class="box-inner">
                    <b>Long/Lat: <span id="lat"></span><span id="long"></span></b>
                    <img src="" alt="" id="src">
                    <span id="temp" style="font-size: 300%; font-weight: bold; float: right; right-margin: 15% !important;"></span>
                    <br>
                    <label><b>Location: </b></label>
                    <p id="messageOne"></p>
                    <label><b>Forecast: </b></label>
                    <p id="messageTwo"></p>
                </div>
            </div>
            <div id="box2" class="box">
                <div class="box-inner">

                    <div class="others">
                        <span class="left"> Humidity</span>
                        <span class="right" id="humidity"></span>
                    </div>
                    <hr>
                    <div class="others">
                        <span class="left"> Wind degree</span>
                        <span class="right" id="w_degree"></span>
                    </div>
                    <hr>
                    <div class="others">
                        <span class="left"> Wind Speed</span>
                        <span class="right" id="w_speed"></span>
                    </div>
                    <hr>
                    <div class="others">
                        <span class="left"> Day</span>
                        <span class="right" id="day"></span>
                    </div>
                    <hr>
                    <div class="others">
                        <span class="left"> Visibility</span>
                        <span class="right" id="visibility"></span>
                    </div>
                    <hr>
                    <div class="other">
                        <span> Local time:</span> <br>
                        <span class="bold" id="localTime"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

        {{>footer}}
</body>

